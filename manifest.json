{
  "manifest_version": 2,

  "name": "Globo.com menos chato.",
  "description": "Essa extens√£o remove o conteudo do GSHOW, incluindo publicidade",
  "version": "1.0.1",

  "browser_action": {
    "default_icon": "images/gshit.png",
    "default_popup": "index.html",
    "default_title": "Gshit"
  },
  "content_scripts": [
    {
      "matches": ["http://www.globo.com/*"],
      "js": ["js/index.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/"
  ],
  "web_accessible_resources": [
    "style/gshit.css",
    "style/gshitback.css"
  ]
}
